<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200"
    android:background="@drawable/nav_background"
    android:orientation="vertical">

    <app.andanhm.foodworld.view.widget.RoundImageView
        android:id="@+id/imageViewNavigationDrawer"
        android:layout_width="@dimen/_100"
        android:layout_height="@dimen/_100"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        android:layout_marginBottom="@dimen/_20"
        android:layout_marginLeft="@dimen/_08"
        android:layout_marginStart="@dimen/_08"
        android:layout_above="@+id/textViewEmail"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewName"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/_40"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_14"
        android:layout_marginStart="@dimen/_14"
        android:textColor="@android:color/white"
        android:layout_above="@+id/textViewEmail"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEmail"
        android:text="@string/feedback_email"
        android:layout_marginBottom="@dimen/_14"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"/>

</RelativeLayout>