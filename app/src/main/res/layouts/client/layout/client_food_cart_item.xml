<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewCartFood"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:elevation="@dimen/_04">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:baselineAligned="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imageViewCartFood"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/no_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="0.8"
                    android:id="@+id/textViewCartFoodName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_06"
                    android:text="@string/item_food_name"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/imageButtonClose"
                    android:layout_weight="0.2"
                    android:alpha="0.6"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_close_black_24dp"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/add_to_cart" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="bottom"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20"
                android:layout_marginRight="@dimen/_06"
                android:layout_marginEnd="@dimen/_06"
                android:layout_marginLeft="@dimen/_06"
                android:layout_marginStart="@dimen/_06"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_quantity_food_item"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14" />
                <TextView
                    android:id="@+id/textViewQuantity"
                    android:layout_marginLeft="@dimen/_08"
                    android:layout_marginStart="@dimen/_08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_quantity_dummy"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_16" />
                <LinearLayout
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/india_rupee_symbol"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewFoodPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_04"
                        android:layout_marginStart="@dimen/_04"
                        android:text="@string/money_dummy"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_16"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>